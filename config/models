User
    ident Text
    password Text Maybe
    salt Text Maybe
    UniqueUser ident
    deriving Typeable

Calendar
    owner UserId
    name Text
    desc Text Maybe
    color Text
    public Bool
    publicedit Bool
    UniqueCalendar owner name
Target
    owner UserId
    name Text

-- targets (calendar objects)
Note
    content Textarea
    target TargetId
    UniqueNote target
Todo
    done Bool
    repeat Repeat
    begin Day
    end Day Maybe
    alarm Alarm
    urgency Urgency
    target TargetId
    UniqueTodo target
Event
    repeat Repeat
    begin Day
    end Day Maybe
    place Text Maybe
    urgency Urgency
    alarm Alarm Maybe
    attendees [Text]
    comment Textarea Maybe
    target TargetId
    UniqueEvent target

-- many-to-many: cals-to-targets
CalTarget
    calendar CalendarId
    target TargetId
    UniqueCalTarget calendar target
